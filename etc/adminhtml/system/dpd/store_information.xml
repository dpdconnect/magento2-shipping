<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="store_information" translate="label" type="text comment" sortOrder="30" showInDefault="1" showInWebsite="1"
           showInStore="1">
        <comment>The store address is used in shipping lists</comment>

        <label>Store Information</label>

        <field id="name" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Name</label>
            <validate>required-entry</validate>
        </field>

        <field id="street" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Street</label>
            <validate>required-entry</validate>
        </field>

        <field id="house_number" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>House number</label>
            <validate>required-entry</validate>
        </field>

        <field id="zip_code" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Zip code</label>
            <validate>required-entry</validate>
        </field>

        <field id="city" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>City</label>
            <validate>required-entry</validate>
        </field>
        <field id="country" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Country</label>
            <source_model>Magento\Directory\Model\Config\Source\Country</source_model>
        </field>
        <field id="phone" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Store phone</label>
            <validate>required-entry</validate>
        </field>
        <field id="email" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Store E-Mail</label>
            <validate>required-entry</validate>
        </field>
        <field id="vat_number" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>VAT number</label>
        </field>
        <field id="eori" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Eori number</label>
        </field>
        <field id="sprn" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>HMRC number</label>
            <comment>Mandatory if the value of the parcel is ≤ £ 135.</comment>
        </field>
        <field id="customs_terms" translate="label" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
            <label>Customs terms</label>
            <source_model>DpdConnect\Shipping\Config\Source\Settings\CustomsTerms</source_model>
        </field>
    </group>
</include>
